<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="showCaseViewStyle" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">@color/showCaseBackground</item>
        <item name="sv_showcaseColor">@color/colorAccents</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_titleTextAppearance">@style/showCaseTitleStyle</item>
        <item name="sv_detailTextAppearance">@style/showCaseTitleDetailStyle</item>
        <item name="sv_buttonText">Close</item>
    </style>

    <style name="showCaseTitleStyle" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#CC053B</item>
    </style>

    <style name="showCaseTitleDetailStyle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12dp</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
