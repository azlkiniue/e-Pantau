<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/profile_circular_border_imageview"
                android:elevation="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_child_care_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="270dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="60dp"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:text="Habibatul Jalilah" />

            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="12pt"
                    android:text="Apa yang terjadi?"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#bbb"
                    android:layout_marginTop="220dp"
                    android:layout_marginLeft="-385dp">
                </View>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/nama_kejadian"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="8pt"
                        android:text="Nama Kejadian"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:background="#bbb"
                        android:layout_marginTop="45dp"
                        android:layout_marginLeft="-385dp">
                    </View>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/hashtag"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="8pt"
                        android:text="Tag"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:background="#bbb"
                        android:layout_marginTop="45dp"
                        android:layout_marginLeft="-385dp">
                    </View>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/photo"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="8pt"
                        android:text="Foto/Video"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:background="#bbb"
                        android:layout_marginTop="45dp"
                        android:layout_marginLeft="-385dp">
                    </View>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/location"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="8pt"
                        android:text="Lokasi Kejadian"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:background="#bbb"
                        android:layout_marginTop="45dp"
                        android:layout_marginLeft="-385dp">
                    </View>

                </LinearLayout>

            <Button
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="200dp"
                android:backgroundTint="@color/colorMenu"
                android:background="@drawable/button"
                android:textSize="20dp"
                android:fontFamily="Times New Roman"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="KIRIM"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>